<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.demand.mapper.PerEnclosureWorkMapper">
    
    <resultMap type="PerEnclosureWork" id="PerEnclosureWorkResult">
        <result property="id"    column="id"    />
        <result property="customerCode"    column="customer_code"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="companyName"    column="company_name"    />
        <result property="addtime"    column="addtime"    />
    </resultMap>

    <sql id="selectPerEnclosureWorkVo">
        select id, customer_code, DATE_FORMAT(start_time,'%Y-%m-%d') as start_time,  DATE_FORMAT(end_time,'%Y-%m-%d') as end_time, company_name, addtime from per_enclosure_work
    </sql>

    <select id="selectPerEnclosureWorkList" parameterType="PerEnclosureWork" resultMap="PerEnclosureWorkResult">
        <include refid="selectPerEnclosureWorkVo"/>
        <where>  
            <if test="customerCode != null  and customerCode != ''"> and customer_code = #{customerCode}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="companyName != null  and companyName != ''"> and company_name like concat('%', #{companyName}, '%')</if>
            <if test="addtime != null "> and addtime = #{addtime}</if>
        </where>
    </select>
    
    <select id="selectPerEnclosureWorkById" parameterType="Integer" resultMap="PerEnclosureWorkResult">
        <include refid="selectPerEnclosureWorkVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPerEnclosureWork" parameterType="PerEnclosureWork" useGeneratedKeys="true" keyProperty="id">
        insert into per_enclosure_work
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="customerCode != null">customer_code,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="companyName != null">company_name,</if>
            <if test="addtime != null">addtime,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="customerCode != null">#{customerCode},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="companyName != null">#{companyName},</if>
            <if test="addtime != null">#{addtime},</if>
         </trim>
    </insert>

    <update id="updatePerEnclosureWork" parameterType="PerEnclosureWork">
        update per_enclosure_work
        <trim prefix="SET" suffixOverrides=",">
            <if test="customerCode != null">customer_code = #{customerCode},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="companyName != null">company_name = #{companyName},</if>
            <if test="addtime != null">addtime = #{addtime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePerEnclosureWorkById" parameterType="Integer">
        delete from per_enclosure_work where id = #{id}
    </delete>

    <delete id="deletePerEnclosureWorkByIds" parameterType="String">
        delete from per_enclosure_work where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>